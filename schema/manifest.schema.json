{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://flyto2.net/schemas/manifest.schema.json",
  "title": "Flyto2 i18n Manifest",
  "description": "Schema for flyto-i18n manifest.json",
  "type": "object",
  "required": ["name", "version", "locales"],
  "properties": {
    "name": {
      "type": "string",
      "const": "flyto-i18n"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "description": {
      "type": "string"
    },
    "source_version": {
      "type": "string",
      "description": "Version of flyto-core this is synced with"
    },
    "repository": {
      "type": "string",
      "format": "uri"
    },
    "locales": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["name", "native_name", "coverage", "status"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Language name in English"
          },
          "native_name": {
            "type": "string",
            "description": "Language name in native script"
          },
          "coverage": {
            "type": "number",
            "minimum": 0,
            "maximum": 100,
            "description": "Translation coverage percentage"
          },
          "status": {
            "type": "string",
            "enum": ["official", "community", "in_progress", "deprecated"]
          },
          "maintainers": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}
